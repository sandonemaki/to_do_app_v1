<h1>編集する</h1>
<%= form_tag("/tasks/#{@task.id}/update") do %>
  <div class="form">
    <div class="form-body">
      <% @task.errors.full_messages.each do |message| %>
      <div>
        <%= message %>
      </div>
    <% end %>
    <textarea name="content"><%= @task.content %></textarea>
    <input type="submit" value="保存">
  </div>
</div>
<% end %>
