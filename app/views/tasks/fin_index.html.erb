<!-- メインコンテンツ -->
<main class="ly_main">
  <div class="ly_card_article">
    <div class="bl_maintitle">
      <h1 class="el_lv1hedding">
        がんばった一覧
      </h1>
    </div><!-- /bl_maintitle -->

    <!-- タスクカード -->
    <section class="ly_card_wrapper">
      <% tasks.each do |task| %>
        <div class="bl_card">
          <div class="bl_card_content">
            <div class=el_card_icon>
              <img src="<%= "/#{task.image_status}" %>", class="el_card_icon__img">
            </div><!-- /el_card_icon -->
            <h2 class="el_card_taskname">
              <%= task.content %>
            </h2>
          </div><!-- /bl_card_content -->
          <!-- 投稿時間とタスクのリンク先 -->
          <div class="bl_card_content_sub">
            <div class="bl_card_date datetime">
              <%= task.created_at.strftime("%Y/%m/%d %H:%M") %>
            </div><!-- /bl_card_date -->
            <ul class="bl_card_nav">
              <li>
                <%= link_to("未完了", "/tasks/#{task.id}/undone", {class: "el_card_navitem", method: :put}) %>
              </li>
              <li>
                <%= link_to("削除", "/tasks/#{task.id}/destroy", {class: "el_card_navitem", method: :post}) %>
              </li>
            </ul><!-- /bl_card_nav -->
          </div><!-- /bl_content_sub -->
        </div><!-- /bl_card -->
      <% end %><!-- /タスクカードループ -->

    </section><!-- /ly_card_wrapper -->
  </div><!-- /ly_card_article -->
</main><!-- /ly_main -- >

<footer>
</footer>
