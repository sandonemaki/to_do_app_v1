<h1>新規やること</h1>
<%= form_tag("/tasks/create") do %>
  <div class="form">
    <div class="form-body">
      <% @task.errors.full_messages.each do |message| %>
        <div>
          <%= message %>
        </div>
      <% end %>
      <textarea name="content"><%= @task.content %></textarea>
      <input type="submit" value="保存">
    </div>
  </div>
<% end %>
